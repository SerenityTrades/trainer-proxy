{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",                       
    "lib": ["ES2022", "DOM", "DOM.Iterable"], 

    /* Modules */
    "module": "ESNext",                       
    "moduleResolution": "Bundler",            

    /* Type Checking */
    "strict": true,                           
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 

    /* Project Options */
    "esModuleInterop": true,                  
    "allowSyntheticDefaultImports": true,     
    "resolveJsonModule": true,                

    /* Node + DOM types (fixes process, fetch, Request, Response) */
    "types": ["node"],                        

    /* Emit */
    "noEmit": true
  },
  "include": ["api/**/*.ts"]
}
